<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidDemo">
        <!--
            NativeActivity: The main activity using android_activity with native-activity feature.
            The lib_name must match the cdylib name in Cargo.toml exactly.
        -->
        <activity
            android:name="android.app.NativeActivity"
            android:exported="true"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize|screenLayout|uiMode|layoutDirection|fontScale|density"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <!-- Fullscreen theme is a demo choice, not a framework requirement -->
            <meta-data
                android:name="android.app.lib_name"
                android:value="desktop_app" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
